# Example environment variables for local development
# Copy this file to .env.local and fill values

# SERVER CONFIGURATION
NODE_ENV=development
PORT=3000

# OAUTH SERVER (required for sign-in/sign-up flow)
# Point this to your OAuth portal or local OAuth server
OAUTH_SERVER_URL=http://localhost:4000

# DATABASE (Postgres/Supabase)
# Format: postgres://USER:PASSWORD@HOST:PORT/DATABASE
# Example Supabase: postgresql://postgres:PASSWORD@db.XXXXX.supabase.co:5432/postgres
DATABASE_URL=postgresql://postgres:password@localhost:5432/decatapp

# AWS S3 (optional, for file uploads)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=

# Google Maps API (optional)
GOOGLE_MAPS_API_KEY=

# OpenAI (optional)
OPENAI_API_KEY=

# CLIENT (Vite) - REQUIRED FOR LOGIN/SIGNUP
VITE_OAUTH_PORTAL_URL=http://localhost:4000
VITE_APP_ID=local-dev-app
VITE_APP_TITLE=DecatAPP - Local Dev
VITE_ANALYTICS_ENDPOINT=
VITE_ANALYTICS_WEBSITE_ID=
